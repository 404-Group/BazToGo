<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BazToGo.BazToYouPage"
             Title="BazToYouPage">
    <Shell.TitleView>
        <StackLayout>
            <Label  Text="BazToYou"
                TextColor="White"
                
                VerticalTextAlignment="Center"
                VerticalOptions="Center"
                HeightRequest="50"
                Padding="0"
                Margin="0,2,0,0"
                FontSize="Medium"/>
        </StackLayout>
    </Shell.TitleView>
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>