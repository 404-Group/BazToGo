<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BazToGo.ViewModels"
             x:Class="BazToGo.SlimsPage"
             xmlns:controls="clr-namespace:BazToGo.Controls"
             xmlns:dto="clr-namespace:BazToGo.dtos">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" x:Key="CartBtn">
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin" Value="0"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
            <Style TargetType="Button" x:Key="AddToCartBtn">
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin" Value="0"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.BindingContext>
        <local:ProductPageViewModel/>
    </ContentPage.BindingContext>
    <Shell.TitleView>
        <StackLayout>
            <Label  Text="Slim Chickens'"
                    TextColor="White"
                    VerticalTextAlignment="Center"
                    VerticalOptions="Center"
                    HeightRequest="50"
                    Padding="0"
                    Margin="0,2,0,0"
                    FontSize="Medium"/>
            <controls:CartControl Count="{Binding CartCount}"/>
        </StackLayout>
    </Shell.TitleView>
    <Grid RowDefinitions="2*,.2*">
        <CollectionView 
         ItemsSource="{Binding SlimsItemsList}"
         SelectionMode="Single"   
         SelectedItem="{Binding SelectedItem}"
         ItemsLayout="VerticalGrid, 2"
         Margin="0"
     Grid.Row="0">

            <CollectionView.ItemTemplate>

                <DataTemplate>
                    <StackLayout>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor"
                                              Value="LightSkyBlue" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid RowDefinitions="175, Auto, Auto, Auto"
                   ColumnDefinitions="*,*"
                   Margin="0,4,0,0">
                            <Image Source="{Binding Image}"
                        
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Grid.ColumnSpan="2"
                            Margin="5"/>
                            <Label Grid.Row="1"
                        Grid.ColumnSpan="2"
                        HorizontalOptions="Start"
                        Text="{Binding Name}"
                            Margin="5"/>

                            <Label  Text="{Binding Price}"
                             Grid.Row="1"
                             Grid.Column="2"
                             HorizontalOptions="End"
                             Margin="5"/>

                        </Grid>

                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Grid.Row="1"
          Text="Add"
         FontSize="16"
         CornerRadius="0"
         Margin="0"
         HorizontalOptions="FillAndExpand"
         HeightRequest="70"
          Style="{StaticResource AddToCartBtn}"
          IsVisible="True"
          Command="{Binding Source={x:RelativeSource AncestorType={x:Type local:ProductPageViewModel}}, Path=AddToCartCommand}"
           CommandParameter="{Binding SelectedItem}">
        </Button>
    </Grid>
</ContentPage>
